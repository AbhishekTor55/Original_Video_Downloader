<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MP4 Downloader</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        * {
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }

        body {
            margin: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
        }

        .container {
            width: 100%;
            max-width: 420px;
            background: #111;
            padding: 25px;
            border-radius: 14px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.6);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
        }

        input[type="url"] {
            width: 100%;
            padding: 14px;
            border-radius: 8px;
            border: none;
            outline: none;
            font-size: 15px;
            background: #222;
            color: #fff;
        }

        .type-buttons {
            display: flex;
            gap: 10px;
            margin-top: 12px;
        }

        .type-buttons button {
            flex: 1;
            padding: 10px;
            border-radius: 8px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            background: #222;
            color: #fff;
        }

        .type-buttons button.active {
            background: linear-gradient(135deg, #00c6ff, #0072ff);
        }

        .fetch-btn {
            width: 100%;
            margin-top: 15px;
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            background: linear-gradient(135deg, #00c6ff, #0072ff);
            color: #fff;
        }

        .progress-box {
            display: none;
            margin-top: 15px;
        }

        .progress-bg {
            width: 100%;
            height: 14px;
            background: #222;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            width: 0%;
            background: #00e676;
            transition: width 0.4s;
        }

        .progress-text {
            margin-top: 6px;
            text-align: center;
            font-size: 13px;
            color: #ccc;
        }

        .download-btn {
            display: none;
            margin-top: 12px;
            text-align: center;
            padding: 12px;
            border-radius: 8px;
            background: #00e676;
            color: #000;
            font-weight: 700;
            text-decoration: none;
        }

        footer {
            margin-top: 18px;
            text-align: center;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>ðŸŽ¬ MP4 / MP3 Downloader</h2>

    <form onsubmit="startDownload(); return false;">
        <input type="url" id="url" placeholder="Paste YouTube / Instagram link" required>

        <div class="type-buttons">
            <button type="button" id="mp4" class="active" onclick="setType('mp4')">MP4</button>
            <button type="button" id="mp3" onclick="setType('mp3')">MP3</button>
        </div>

        <button class="fetch-btn" type="submit">Fetch</button>
    </form>

    <div class="progress-box" id="progressBox">
        <div class="progress-bg">
            <div class="progress-bar" id="progressBar"></div>
        </div>
        <div class="progress-text" id="progressText">Starting...</div>

        <!-- fallback button -->
        <a id="downloadBtn" class="download-btn" href="/download" download>
            â¬‡ Download Now
        </a>
    </div>

    <footer>
        Built with Flask â€¢ Production UI
    </footer>
</div>

<script>
let type = "mp4";

function setType(t) {
    type = t;
    document.getElementById("mp4").classList.remove("active");
    document.getElementById("mp3").classList.remove("active");
    document.getElementById(t).classList.add("active");
}

function startDownload() {
    const url = document.getElementById("url").value;
    if (!url) return;

    document.getElementById("progressBox").style.display = "block";
    document.getElementById("downloadBtn").style.display = "none";
    document.getElementById("progressText").innerText = "Starting download...";

    fetch("/start", {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({ url: url, type: type })
    });

    const timer = setInterval(async () => {
        const res = await fetch("/progress");
        const data = await res.json();

        document.getElementById("progressBar").style.width = data.percent + "%";
        document.getElementById("progressText").innerText =
            data.status === "finished"
            ? "Download completed âœ” Starting download..."
            : "Downloading... " + data.percent + "%";

        if (data.status === "finished") {
            clearInterval(timer);

            // ðŸ”¥ AUTO DOWNLOAD
            setTimeout(() => {
                window.location.href = "/download";
            }, 800);

            // fallback if browser blocks auto download
            document.getElementById("downloadBtn").style.display = "block";
        }
    }, 1000);
}
</script>

</body>
</html>

